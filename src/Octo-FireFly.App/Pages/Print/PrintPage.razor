@using Octo_FireFly.App.Pages.Print.Models
@inherits PageBase<PrintPageViewModel>
@page "/"
@page "/print"


<div class="row">
    <div class="col s8">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">Temperature</span>
                <p>
                    <Chart Config="ViewModel.ChartConfig" @ref="ViewModel.Chart"></Chart>
                </p>
            </div>
        </div>
    </div>
    <div class="col s4">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">Print Details</span>
                <p>
                    I am a very simple card. I am good at containing small bits of information.
                    I am convenient because I require little markup to use effectively.
                </p>
            </div>
        </div>
    </div>
</div>


<div>
    Tool: @ViewModel.CurrentToolActual / @ViewModel.CurrentToolTarget
</div>
<div>
    Bed: @ViewModel.CurrentBedActual / @ViewModel.CurrentBedTarget
</div>


<div class="print-progress grey darken-3">
    <div class="row">
        <div class="col s10">
            <div class="progress">
                <div class="determinate green lighten-1" style="width: 70%"></div>
                <span class="grey-text text-darken-4">70% (left time: 2h 32m)</span>
            </div>
        </div>
        <div class="col s2 center-align">
            <TouchButton Title="Cancel" Class="red darken-3" />
        </div>
    </div>
</div>
